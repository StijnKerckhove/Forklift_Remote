<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="stijnkerckhove.forklift_remote.fragments.ControllerFragment">

    <ImageButton
        android:id="@+id/driveBackwardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_down"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/driveForwardButton" />

    <ImageButton
        android:id="@+id/driveForwardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_up"
        android:layout_above="@+id/driveBackwardButton"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="105dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_arrow_right"
        android:id="@+id/turnRightButton"
        android:layout_alignBottom="@+id/driveBackwardButton"
        android:layout_toEndOf="@+id/turnLeftButton"
        android:layout_marginBottom="19dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_arrow_left"
        android:layout_marginStart="33dp"
        android:id="@+id/turnLeftButton"
        android:layout_alignTop="@+id/turnRightButton"
        android:layout_alignParentStart="true" />

</RelativeLayout>
